#include <stdio.h>
int main()
{
	int c,n, reverse = 0, remainder;
	char a[10];
	printf("\n 1 for only number");
	printf("\n 2 for only string");
	printf("\n 3 for special characters");
	printf("\n 4 for combinational charcters");	
	printf("\n enter your choice=  ");
	scanf("%d",&c);
	if(c==1){
  	printf("Enter an integer: ");
  	scanf("%d", &n);
	while (n != 0) {
    remainder = n % 10;
    reverse = reverse * 10 + remainder;
    n /= 10;}
	printf("Reversed number = %d", reverse);}
	else
	{
		printf("\noperation cannot be performed(ONLY NUMBER OPTION CAN PERFORMED)");
	}
}
