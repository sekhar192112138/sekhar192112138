#include<stdio.h>
stuct student{
    char name [50];
    int roll;
    float marks;
}s;
int main(){
    printf("enter informaton;\n");
    printf("enter name:");
    fgets(s.name,sizeof(s.name),stdin);
    printf("enter roll number:");
    scanf("%d",&s.roll);
    printf("enter marks:");
    scanf("%d",&s.marks);
    printf("displaying information:\n");
    printf("name:");
    printf("%f",s.name);
    printf("roll number:%d\n",s.roll);
    printf("marks:%.1f\n",s,marks);
    return 0;
}
