#include <stdio.h>

int main() {
    
  int n;
  printf("enter the total nnumber of rows=  ");
  scanf("%d", & n);
  
  for (int i = n; i >= 1; --i) {
      
    for (int j = 0; j < n - i; ++j)
      printf("  ");
      
    for (int j = i; j <= 2 * i - 1; ++j)
      printf("* ");
      
    for (int j = 0; j < i - 1; ++j)
      printf("* ");
      
    printf("\n");
  }
  
  return 0;
}
